    <!-- Sangue escorrendo -->
    <script>
        // Criar as palavras "EU TE AMO" flutuando
        const fundo = document.querySelector('.fundo');
        for (let i = 0; i < 50; i++) {
            const span = document.createElement('span');
            span.innerText = 'EU TE AMO';
            span.style.left = Math.random() * 100 + 'vw';
            span.style.top = Math.random() * 100 + 'vh';
            span.style.animationDuration = (20 + Math.random() * 30) + 's';
            span.style.animationDelay = (Math.random() * 30) + 's';
            fundo.appendChild(span);
        }

        // Criar gotas de sangue escorrendo
        function criarGota() {
            const gota = document.createElement('div');
            gota.classList.add('gota');
            gota.style.left = Math.random() * 100 + 'vw';
            gota.style.animationDuration = (2 + Math.random() * 3) + 's';
            document.body.appendChild(gota);
            setTimeout(() => {
                gota.remove();
            }, 5000);
        }

        setInterval(criarGota, 200);
    </script>

