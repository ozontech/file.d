<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>I love Quỳnh</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: black;
      overflow: hidden;
      height: 100vh;
      font-family: Arial, sans-serif;
      position: relative;
    }

    /* Floating hearts */
    .heart {
      position: absolute;
      width: 16px;
      height: 16px;
      background-color: white;
      transform: rotate(45deg);
      animation: floatUp 6s linear infinite;
      opacity: 0.8;
    }

    .heart::before,
    .heart::after {
      content: "";
      position: absolute;
      width: 16px;
      height: 16px;
      background-color: white;
      border-radius: 50%;
    }

    .heart::before {
      top: -8px;
      left: 0;
    }

    .heart::after {
      top: 0;
      left: -8px;
    }

    @keyframes floatUp {
      0% {
        bottom: -20px;
        opacity: 0.8;
      }
      100% {
        bottom: 100%;
        opacity: 0;
      }
    }

    /* Moving text */
    .love-text {
      position: absolute;
      top: 45%;
      white-space: nowrap;
      font-size: 48px;
      font-weight: bold;
      color: white;
      animation: moveText 10s linear infinite;
      text-shadow: 2px 2px 6px #ff007f;
    }

    @keyframes moveText {
      0% {
        left: 100%;
      }
      100% {
        left: -100%;
      }
    }
  </style>
</head>
<body>

  <!-- Floating hearts (auto-generated by JS) -->
  <script>
    const numberOfHearts = 40;
    for (let i = 0; i < numberOfHearts; i++) {
      const heart = document.createElement('div');
      heart.className = 'heart';
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.animationDelay = Math.random() * 8 + 's';
      heart.style.width = '14px';
      heart.style.height = '14px';
      document.body.appendChild(heart);
    }
  </script>

  <!-- Moving Text -->
  <div class="love-text">I love Quỳnh ❤️</div>

</body>
